import React, { useState } from 'react'

export default function Todo(){
  const [task, setTask] = useState('')
  const [list, setList] = useState([])

  function add(){ if(!task) return; setList([...list,{id:Date.now(), text:task, done:false}]); setTask('') }
  function toggle(id){ setList(list.map(l=> l.id===id? {...l, done:!l.done}:l)) }
  function remove(id){ setList(list.filter(l=> l.id!==id)) }

  return (
    <div className="card">
      <h4 className="font-semibold">Todo</h4>
      <div className="mt-3 flex gap-2">
        <input value={task} onChange={e=>setTask(e.target.value)} className="flex-1 p-2 border rounded" placeholder="New task" />
        <button onClick={add} className="px-3 py-2 bg-blue-600 text-white rounded">Add</button>
      </div>
      <ul className="mt-3 space-y-2">
        {list.map(l=> (
          <li key={l.id} className={`p-2 border rounded flex justify-between ${l.done? 'bg-green-50':''}`}>
            <label className="inline-flex items-center gap-2"><input type="checkbox" checked={l.done} onChange={()=>toggle(l.id)} /> <span>{l.text}</span></label>
            <button onClick={()=>remove(l.id)} className="text-sm text-red-500">Delete</button>
          </li>
        ))}
      </ul>
    </div>
  )
}
