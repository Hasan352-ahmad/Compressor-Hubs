### src/components/Alarm.jsx

```jsx
import React, { useState, useRef } from 'react'

const PRESETS = [440, 523.25, 659.25, 880, 987.77, 1108.73, 1318.51, 1567.98, 1760, 1975.53]

export default function Alarm(){
  const [time, setTime] = useState('')
  const [preset, setPreset] = useState(0)
  const timers = useRef([])

  function schedule(){
    const secs = Number(time)
    if(!secs || secs <=0) return alert('Enter seconds to wait')
    const id = setTimeout(()=>playTone(PRESETS[preset]), secs*1000)
    timers.current.push(id)
    alert('Alarm set for ' + secs + ' seconds')
  }

  function playTone(freq){
    const ctx = new (window.AudioContext || window.webkitAudioContext)()
    const o = ctx.createOscillator()
    const g = ctx.createGain()
    o.type = 'sine'
    o.frequency.value = freq
    o.connect(g); g.connect(ctx.destination)
    o.start()
    g.gain.setValueAtTime(0.0001, ctx.currentTime)
    g.gain.exponentialRampToValueAtTime(0.5, ctx.currentTime + 0.01)
    setTimeout(()=>{ g.gain.exponentialRampToValueAtTime(0.0001, ctx.currentTime + 0.5); o.stop(); ctx.close(); }, 1500)
  }

  function cancelAll(){ timers.current.forEach(clearTimeout); timers.current = []; alert('Cancelled all alarms') }

  return (
    <div className="card">
      <h4 className="font-semibold">Alarm (10 tones)</h4>
      <p className="text-sm text-gray-600">Set an alarm by seconds. Choose one of 10 preset tones.</p>
      <div className="mt-3 flex gap-2">
        <input type="number" className="p-2 border rounded" placeholder="Seconds" value={time} onChange={e=>setTime(e.target.value)} />
        <select value={preset} onChange={e=>setPreset(Number(e.target.value))} className="p-2 border rounded">
          {PRESETS.map((f,i)=> <option key={i} value={i}>Tone {i+1} ({Math.round(f)}Hz)</option>)}
        </select>
        <button onClick={schedule} className="px-3 py-2 bg-indigo-600 text-white rounded">Set</button>
      </div>
      <div className="mt-3 flex gap-2"><button onClick={()=>playTone(PRESETS[preset])} className="px-3 py-2 border rounded">Test Tone</button><button onClick={cancelAll} className="px-3 py-2 border rounded">Cancel all</button></div>
    </div>
  )
}
