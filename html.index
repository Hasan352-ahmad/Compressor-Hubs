import React, { useState } from 'react'
import jsPDF from 'jspdf'
import html2canvas from 'html2canvas'

export default function InvoiceMaker(){
  const [items, setItems] = useState([{desc:'Design work', qty:1, price:100}])
  const [company, setCompany] = useState('Your Company')
  const [client, setClient] = useState('Client name')

  function addItem(){ setItems([...items, {desc:'', qty:1, price:0}]) }
  function updateItem(i, key, val){ const copy = [...items]; copy[i][key]=val; setItems(copy) }

  function exportPDF(){
    const el = document.getElementById('invoice-preview')
    html2canvas(el).then(canvas => {
      const img = canvas.toDataURL('image/png')
      const pdf = new jsPDF('p','pt','a4')
      const imgProps = pdf.getImageProperties(img)
      const pdfWidth = pdf.internal.pageSize.getWidth()
      const pdfHeight = (imgProps.height * pdfWidth) / imgProps.width
      pdf.addImage(img, 'PNG', 0, 0, pdfWidth, pdfHeight)
      pdf.save('invoice.pdf')
    })
  }

  const subtotal = items.reduce((s,i)=> s + (i.qty * i.price),0)
  const tax = subtotal * 0.18
  const total = subtotal + tax

  return (
    <div className="card">
      <h4 className="font-semibold">Invoice Maker</h4>
      <p className="text-sm text-gray-600">Fill details and export a professional invoice as PDF.</p>

      <div className="mt-3 space-y-2">
        <input className="w-full p-2 border rounded" value={company} onChange={e=>setCompany(e.target.value)} placeholder="Company name" />
        <input className="w-full p-2 border rounded" value={client} onChange={e=>setClient(e.target.value)} placeholder="Client name" />
        <div className="mt-2">
          {items.map((it,i)=> (
            <div key={i} className="flex gap-2 mb-2">
              <input className="flex-1 p-2 border rounded" value={it.desc} onChange={e=>updateItem(i,'desc',e.target.value)} placeholder="Item description" />
              <input className="w-20 p-2 border rounded" type="number" value={it.qty} onChange={e=>updateItem(i,'qty',Number(e.target.value))} />
              <input className="w-28 p-2 border rounded" type="number" value={it.price} onChange={e=>updateItem(i,'price',Number(e.target.value))} />
            </div>
          ))}
          <button onClick={addItem} className="px-3 py-2 border rounded">Add item</button>
        </div>

        <div id="invoice-preview" className="mt-4 p-4 border rounded bg-white">
          <h3 className="text-lg font-bold">{company}</h3>
          <div>Bill to: {client}</div>
          <table className="w-full mt-3 text-sm">
            <thead><tr className="text-left"><th>Description</th><th>Qty</th><th>Price</th><th>Total</th></tr></thead>
            <tbody>
              {items.map((it,i)=> (
                <tr key={i}><td>{it.desc}</td><td>{it.qty}</td><td>{it.price}</td><td>{it.qty*it.price}</td></tr>
              ))}
            </tbody>
          </table>
          <div className="mt-3 text-right">Subtotal: {subtotal.toFixed(2)}</div>
          <div className="text-right">Tax (18%): {tax.toFixed(2)}</div>
          <div className="font-semibold text-right">Total: {total.toFixed(2)}</div>
        </div>

        <div className="mt-3">
          <button onClick={exportPDF} className="px-4 py-2 bg-green-600 text-white rounded">Export PDF</button>
        </div>
